<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sree" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_1</item>
        <item name="colorPrimaryVariant">@color/orange_5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_2</item>
        <item name="colorSecondaryVariant">@color/orange_4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/NewButton</item>
    </style>

    <style name="NewButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/presee_start_2p_r</item>
    </style>

</resources>